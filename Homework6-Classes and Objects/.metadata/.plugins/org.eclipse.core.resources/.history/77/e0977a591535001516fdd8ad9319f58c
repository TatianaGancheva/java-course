package presentatinTask2;

public class Employee {
	
	protected int hoursPerMount;
	protected int Salary;

	public Employee(){
		this.hoursPerMount = 0;
		this.Salary=0;
	
	}
	public Employee(int hoursPerMount, int Salary){
//		this();
//		setHours(hoursPerMount);
//		setSalary(Salary);
		this.hoursPerMount=hoursPerMount;
		this.Salary=Salary;
		
	}
	public int getHours(){
		return hoursPerMount;
	}
	public void setHours(int hoursPerMount){
		this.hoursPerMount=hoursPerMount;
	}
	public int getSalary(){
		return Salary;
	}
	public void setSalary (int Salary){
		this.Salary=Salary;
	}
	public void printInfo(){
		System.out.printf("Work hours per mount: "+ this.hoursPerMount +" and salary: "+this.Salary );
	}
	public static void main(String[] args){
		//Employee someEmployee= new Employee();
		
		//someEmployee.printInfo();
		Employee myEmployee1=new Employee(23, 15);
		//System.out.printf("housPerMount: %d , %d",myEmployee1.hoursPerMount,myEmployee1.Salary);
		myEmployee1.printInfo();
		
	}

}
